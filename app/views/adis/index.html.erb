<p id="notice"><%= notice %></p>

<h1>Listing Adis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adis.each do |adi| %>
      <tr>
        <td><%= adi.name %></td>
        <td><%= link_to 'Show', adi %></td>
        <td><%= link_to 'Edit', edit_adi_path(adi) %></td>
        <td><%= link_to 'Destroy', adi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Adi', new_adi_path %>
